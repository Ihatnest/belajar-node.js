<%- include ('layout/header') %>

  <body class="bg-dark">
    <%- include ('layout/nav') %>
      <form method="post" action="/contact/edit">
        <input type="hidden" name="oldName" value="<%= find.nama %>">
        <div class="" style="width: 20rem;  margin: 20px auto;">
          <label for="nama" class="text-secondary from-label" style="font-size: 15px; margin: 0 0;">Nama</label>
          <div class="input-group flex-nowrap">
            <input type="text" class="form-control" placeholder="Nama" aria-label="Username"
              aria-describedby="addon-wrapping" name="nama" value="<%= find.nama %>">
          </div>

          <label for="nomorhp" class="text-secondary from-label" style="font-size: 15px; margin: 10px 0 0;">Nomor
            Handphone</label>
          <div class="input-group flex-nowrap">
            <input type="text" class="form-control" placeholder="Nomor Handphone" aria-label="Username"
              aria-describedby="addon-wrapping" name="nomorhp" value="<%= find.nomorhp %>">
          </div>

          <label for="email" class="text-secondary from-label" style="font-size: 15px; margin: 10px 0 0;">Email</label>
          <div class="input-group flex-nowrap">
            <input type="email" class="form-control" placeholder="Email" aria-label="Username"
              aria-describedby="addon-wrapping" name="email" value="<%= find.email %>">
          </div>
          <input class="btn btn-primary" type="submit" value="input" style=" margin: 20px auto;">
          <input class="btn btn-danger" type="button" value="Batalkan" style=" margin: 20px auto;">
        </div>
      </form>
      <% if (typeof errors !='undefined' ) { %>
        <div class="alert alert-danger m-auto" style="width: 400px; height: 10%;" role="alert">
          <% errors.forEach(e=> { %>
            <div class="" role="alert">
              ! <%= e.msg %>
            </div>
            <% }) %>
        </div>
        <% } %>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
            crossorigin="anonymous"></script>
  </body>

  </html>
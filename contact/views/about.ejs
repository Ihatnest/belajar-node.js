<%- include ('layout/header') %>

  <body class="bg-dark">
    <%- include ('layout/nav') %>
    <% if (!find) { %>
      <div class="alert alert-danger" role="alert">
        Sepertinya Tidak ada nama <%= test %> didalam daftar contact anda <a href="/" class="alert-link">click untuk Kembali</a>.
      </div>
    <% }else { %>
    <div class="card" style="width: 20rem; height: 10rem; margin: 20px auto; position: relative;">
      <a href="/" type="button"  class="btn-close closeAbout" style="position: absolute; right: 10px; top: 10px;"></a>
      <div class="card-body">
        <h5 class="fw-semibold"><%= find.nama %> </h5>
        <h6 class="fw-normal fs-10 text"><%= find.nomorhp %> </h6>
        <h6 class="fw-semibold text-muted"><%= find.email %> </h6>
        <a href="#" class="btn btn-primary">Edit</a>
        <a href="/hapus/<%= find.nama %> " class="btn btn-primary">hapus</a>
      </div>
    </div>
    <% } %>
    <script src="/LatihanMembuatContact/app.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>

</html>